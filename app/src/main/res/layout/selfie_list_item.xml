<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selfie_list_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/thumb_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/selfie_list_item_image"
        android:gravity="center_vertical|start">

        <TextView
            android:id="@+id/selfie_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eeeeee"
            android:layout_toEndOf="@+id/selfie_list_item_image"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/selfie_list_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#eeeeee"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/selfie_list_item_image"
             />

    </LinearLayout>


</RelativeLayout>